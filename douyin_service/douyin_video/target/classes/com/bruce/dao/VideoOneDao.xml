<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bruce.dao.VideoOneDao">



    <resultMap type="com.bruce.video.entity.VideoOne" id="VideoOne">
        <result property="musicName" column="music_name" jdbcType="VARCHAR"/>
        <result property="musicAvatar" column="music_avatar" jdbcType="VARCHAR"/>
        <result property="videoComment" column="video_comment" jdbcType="VARCHAR"/>
        <result property="videoUrl" column="video_url" jdbcType="VARCHAR"/>
        <result property="nickName" column="nickname" jdbcType="VARCHAR"/>
        <result property="userPic" column="user_pic" jdbcType="VARCHAR"/>
        <result property="commentCount" column="comment_count" jdbcType="INTEGER"/>
        <result property="commentCount" column="like_num" jdbcType="INTEGER"/>
        <result property="commentCount" column="share_num" jdbcType="INTEGER"/>
        <result property="commentCount" column="collect_num" jdbcType="INTEGER"/>
        <result property="commentCount" column="follow_num" jdbcType="INTEGER"/>
    </resultMap>



    <select id="queryVideoInfo" resultMap="VideoOne">
        select
            m.music_name,
            v.video_comment,
            m.music_avatar,
            v.video_url,
            u.nickname as username,
            u.user_pic,
            COUNT(c.comment) as comment_count ,
            count(l.like) as like_num,
            count(l.share) as share_num,
            count(l.collect) as collect_num,
            count(l.follow) as follow_num
        from video v
                 inner join user u on v.auth_id = u.id
                 inner join music m on v.music_id = m.music_video_id
                 left join comment c on v.video_id = c.comment_video_id  -- 使用 LEFT JOIN
                 left join likeone l on v.video_id = l.like_videoid  -- 使用 LEFT JOIN
        where v.video_id = #{videoId}
        group by m.music_name, v.video_url, u.nickname, u.user_pic ,v.video_id -- 按需分组
    </select>

    


</mapper>
